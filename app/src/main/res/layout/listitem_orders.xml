<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
             android:clickable="true"
             android:focusable="true"
             android:background="?selectableItemBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:weightSum="1">
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight=".2"
                android:layout_gravity="center_vertical">
                <com.kodewiz.run.view.ProgressWheel
                    android:id="@+id/progress_wheel"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:visibility="visible"
                    ProgressWheel:pwTextColor="#434343"
                    ProgressWheel:pwTextSize="12sp"
                    ProgressWheel:pwBarLength="60dp"
                    ProgressWheel:pwBarColor="@color/pw_bar_color"
                    ProgressWheel:pwRimColor="@color/pw_rim_color"
                    ProgressWheel:pwBarWidth="@dimen/bar_width_small"
                    ProgressWheel:pwRimWidth="@dimen/rim_width_small"
                    android:layout_gravity="center"/>
            </FrameLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linearLayout2"
                android:layout_weight=".6"
                >
                <com.kodewiz.run.view.TextView_roboto_regular
                    android:id="@+id/textView_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="text_name"
                    android:textColor="@android:color/primary_text_light"
                    android:singleLine="true"
                    android:paddingBottom="2dp"
                    android:textSize="15sp"/>
                <com.kodewiz.run.view.TextView_roboto_regular
                    android:id="@+id/textView_sub_1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/secondary_text_light"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="text_sub"
                    android:textSize="12sp"/>
                <com.kodewiz.run.view.TextView_roboto_regular
                    android:id="@+id/textView_sub_2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/tertiary_text_light"
                    android:text="ordered_time"
                    android:textSize="12sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/textView_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#1e7cff"
                android:text="0"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#2000"
        android:visibility="visible"
        android:layout_gravity="bottom"/>
</FrameLayout>